{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "noImplicitAny": false,

    // 用于设置模块名到基于baseUrl的路径映射
    "baseUrl": ".",
    "paths": {
      "@ylbupt/p5-project": ["src/index"],
      "@ylbupt/p5-project/*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "main.ts",
    "src/**/*.ts",
    "examples/**/*.ts",
    "start-demo/**/*.ts",
    "vite-env.d.ts",
    "types/**/*.d.ts"
  ]
}
